<UserControl x:Class="WPControls.Memory.MemoryWatcher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="Black" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
		  Margin="20,10,0,0">
        <TextBlock x:Name="MemoryCount" Foreground="White" Text="Memory" FontSize="16"
			       VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"/>
    </Grid>
</UserControl>